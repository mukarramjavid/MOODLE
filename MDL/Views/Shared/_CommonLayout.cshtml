
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>MODDLE</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/CustomStyleSheets/ResultStyleSheet.css" rel="stylesheet" />
    <link href="~/CustomStyleSheets/ImageStyle.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/Ionicons/css/ionicons.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Buttons-1.5.6/css/buttons.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Buttons-1.5.6/css/buttons.dataTables.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE/css/skins/skin-blue.css" rel="stylesheet" />
    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>


<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href='@Url.Action("Index","Home")' class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>M</b>DL</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><i class="fa fa-graduation-cap" aria-hidden="true"></i>&nbsp;<b>MODDLE</b></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <li class="dropdown messages-menu">
                            <!-- Menu toggle button -->
                            @*<a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span class="label label-success">4</span>
                            </a>*@
                            <ul class="dropdown-menu">
                                @*<li class="header">You have 4 messages</li>*@
                                <li>
                                    <!-- inner menu: contains the messages -->
                                    <ul class="menu">
                                        <li>
                                            <!-- start message -->
                                            <a href="#">
                                                <div class="pull-left">
                                                    <!-- User Image -->
                                                    <img src="~/Content/AdminLTE/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                                </div>
                                                <!-- Message title and timestamp -->
                                                <h4>
                                                    Support Team
                                                    <small><i class="fa fa-clock-o"></i> 5 mins</small>
                                                </h4>
                                                <!-- The message -->
                                                <p>Why not buy a new awesome theme?</p>
                                            </a>
                                        </li>
                                        <!-- end message -->
                                    </ul>
                                    <!-- /.menu -->
                                </li>
                                <li class="footer"><a href="#">See All Messages</a></li>
                            </ul>
                        </li>
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src='@Url.Content(Session["img"].ToString())' class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@Session["N"] </span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- The user image in the menu -->
                                <li class="user-header">
                                    <img src='@Url.Content(Session["img"].ToString())' class="img-circle" alt="User Image">
                                    <p>
                                        @Session["N"]
                                    </p>
                                    <p style="color:#ffffff">@DateTime.Now</p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="~/Manage/EditDataById" class="btn btn-default btn-flat">Profile</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="~/Account/Logout" class="btn btn-default btn-flat">Sign out</a>

                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src='@Url.Content(Session["img"].ToString())' class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@Session["N"] </p>
                        <!-- Status -->
                        <a href="#"><i class="fa fa-envelope"></i>@User.Identity.Name</a>
                    </div>
                </div>
                <!-- search form (Optional) -->
                @*<form action="#" method="get" class="sidebar-form">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>*@
                <!-- /.search form -->
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Main Menu</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("3"))
                        {
                            
                            <li class="active"><a href="/Teacher/TeacherDashboard/"><i class="fa fa-dashboard fa-lg"></i> <span>Dashboard</span></a></li>
                            <li class=""><a href="/Result/Upload_Result/"><i class="fa fa-upload fa-lg"></i> <span>Upload Result</span></a></li>
                            <li class=""><a href="/Result/StdList/"><i class="fa fa-list fa-lg"></i> <span>Result Report</span></a></li>
                            <li><a href="/Moddle/ScheduleBySession/"><i class="fa fa-table fa-lg"></i> <span>View TimeTable</span></a></li>
                            <!-- For Classes   -->
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-align-left fa-lg"></i> <span>Classes</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li class=""><a href="/Teacher/CreateClass/"><i class="fa fa-creative-commons fa-lg"></i> <span>Create Class</span></a></li>
                                    <li class=""><a href="/Teacher/ClassList/"><i class="fa fa-list fa-lg"></i> <span>Classes List</span></a></li>
                                 </ul>
                            </li>
                        }
                        else if (User.IsInRole("2"))
                        {
                            <li class="active"><a href="/Student/StudentDashboard/"><i class="fa fa-dashboard fa-lg"></i> <span>Dashboard</span></a></li>
                            <li class=""><a href="/Student/View_Result/"><i class="fa fa-book fa-lg"></i> <span>View Result</span></a></li>
                            <li><a href="~/Moddle/ScheduleBySession/"><i class="fa fa-table fa-lg"></i> <span>View TimeTable</span></a></li>
                            @*<li><a href="#"><i class="fa fa-dashboard fa-lg"></i> <span>View Classes</span></a></li>*@
                            <li><a href="/Student/JoinClass"><i class="fa fa-table fa-lg"></i> <span>Join Classes</span></a></li>
                        }
                        else if (User.IsInRole("4"))
                        {
                            <li class="active"><a href="~/Parent/ParentDashboard/"><i class="fa fa-dashboard fa-lg"></i> <span>Dashboard</span></a></li>
                            <li class=""><a href="~/Parent/View_Result/"><i class="fa fa-book fa-lg"></i> <span>View Result</span></a></li>
                            <li><a href="~/Moddle/ScheduleBySession/"><i class="fa fa-table fa-lg"></i> <span>View TimeTable</span></a></li>

                        }
                    }

                </ul>

                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content container-fluid">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                Developed by: IBMH
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; @DateTime.Now.Year <a href='@Url.Action("Index","Home")'>MODDLE</a>.</strong> All rights reserved.
        </footer>
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active"><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
        </aside>

        <div class="control-sidebar-bg"></div>
    </div>

    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/AdminLTE/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/js/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/dataTables.buttons.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/buttons.bootstrap.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/buttons.flash.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/buttons.html5.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/buttons.print.js"></script>
    <script src="~/Scripts/JSZip-2.5.0/jszip.js"></script>
    <script src="~/Scripts/pdfmake-0.1.36/pdfmake.js"></script>
    <script src="~/Scripts/pdfmake-0.1.36/vfs_fonts.js"></script>
    <script src="~/Scripts/Buttons-1.5.6/js/buttons.colVis.js"></script>
    <script src="~/Scripts/AdminLTE/js/jquery.slimscroll.js"></script>
    <script src="~/Scripts/AdminLTE/js/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/AdminLTE/js/adminlte.js"></script>
    <script src="~/Scripts/CustomJS.js"></script>

</body>
</html>