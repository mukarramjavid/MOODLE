    @* Custom Script *@
    <script>
    $(".toggle-password").click(function () {
        var id = $(this).parent().parent().find('input').attr('id')
        console.log(id)
        if ($('#' + id).attr('type') == "password") {
            $('#' + id).attr('type', 'text')
        } else {
            $('#' + id).attr('type', 'password')
        }
        $(this).toggleClass("fa-eye fa-eye-slash")
    });
    </script>
