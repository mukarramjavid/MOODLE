@model IEnumerable<AppDB.Db.tbl_Result>

@{
    ViewBag.Title = "View_Result";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<h1 style="font-weight:bold">Report Card</h1><hr />
@if (Model.Count() == 0)
{
    <label class="text-danger" style="font-weight:bolder;font-size:larger;">No Record Found</label>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><b style="text-transform:capitalize">@Html.DisplayFor(model => model.FirstOrDefault().tbl_User.user_name): @Html.DisplayFor(model => model.FirstOrDefault().tbl_User.tbl_Student.FirstOrDefault().std_rollNo)</b></h3>
                    </div>
                    <div class="panel-body">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="" class="table table-bordered table-striped table-condensed table-hover table-responsive">
                                <thead style="background-color:#337AB7;color:#fff;">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Subject")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Grade")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbl_Subject.subj_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.std_grades)
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    </div>
}
