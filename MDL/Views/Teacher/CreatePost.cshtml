@model AppModel.ViewModels.PostViewModel

@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}
<hr />
@using (Html.BeginForm("CreatePost", "Posts", FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="" id="LoginForm">
        <div class="row">
            <div class="col-md-10">
                <div class="panel-group">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h2 class="panel-title ">
                                <a data-toggle="collapse" class="static" style="color:white" href="#collapse1">Share something to the class</a>
                            </h2>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse">
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                    <div class="form-group">
                                        @*@Html.LabelFor(model => model.postDesc, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                                                @Html.EditorFor(model => model.postDesc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your post Description" } })

                                            </div>
                                            @Html.ValidationMessageFor(model => model.postDesc, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-10 col-md-10 col-sm-offset-4 col-sm-10 col-xs-offset-4 col-xs-10">
                                            <input type="submit" value="Post" class="btn btn-primary" id="btn" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

}